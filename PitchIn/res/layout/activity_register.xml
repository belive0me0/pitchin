<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18CEB4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pitch.view.login.RegisterActivity" >
	<TextView
	    android:id="@+id/register_title_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    android:text="Register to PitchIn!"
	    android:layout_alignParentTop="true"
	    android:textSize="30sp"
	    android:textStyle="bold"
	    />
	
	<LinearLayout
	    android:id="@+id/username_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_below="@+id/register_title_text"
	    >
		<TextView
		    android:id="@+id/username_text"
		    android:layout_width ="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="E-mail Address: "
		    android:layout_below="@+id/register_title_text"
		    android:textSize="20sp"
		    />
		
		<EditText
		    android:id="@+id/username_edit_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:hint="Enter your e-mail address."
		/>
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/password_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/username_layout"
	    android:orientation="horizontal"
	    >
	    <TextView 
	        android:id="@+id/password_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Password: "
	        android:textSize="20sp"
	        />
	    <EditText
	        android:id="@+id/password_edit_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:hint="Enter your password."
	        android:inputType="textVisiblePassword"
	        />	    
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/lastname_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_below="@+id/password_layout"
	    >
		<TextView
		    android:id="@+id/lastname_text"
		    android:layout_width ="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Last name: "
		    android:textSize="20sp"
		    />
		
		<EditText
		    android:id="@+id/lastname_edit_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:hint="Enter your last name."
		/>
	</LinearLayout>
	
		<LinearLayout
	    android:id="@+id/firstname_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_below="@+id/lastname_layout"
	    >
		<TextView
		    android:id="@+id/firstname_text"
		    android:layout_width ="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="First name: "
		    android:textSize="20sp"
		    />
		
		<EditText
		    android:id="@+id/firstname_edit_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:hint="Enter your first name."
		/>
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/OkCancelLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp" 
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id = "@+id/okay_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="OK"
            />
        <Button
            android:id = "@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            />
        </LinearLayout>

</RelativeLayout>
